{
  "compilerOptions": {
    // compile JSX syntax to JS
    "jsx": "react",
    //tsconfig rule since tslint doesnt handle unused
    "noUnusedLocals": true,

    // use latest ES version
    "module": "esnext",
    "target": "esnext",

    // targets node
    "moduleResolution": "node",

    //force case-sensitive imports to avoid compile-time errors
    "forceConsistentCasingInFileNames": true,

    //allows default import of modules without default, shorthand for import * as item from 'module'
    "allowSyntheticDefaultImports": true,

    // ALIAS  src path
    "baseUrl": "./src/",
    "paths": {
      "src/*": ["*"]
    }
  }
}
