{
  "exclude": ["node_modules"],
  "compilerOptions": {
    "jsx": "preserve",

    "lib": ["dom", "esnext"],

    "noEmit": true,

    "target": "esnext",
    "module": "esnext",

    "moduleResolution": "node",

    "resolveJsonModule": true,

    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true,

    "forceConsistentCasingInFileNames": true,

    "experimentalDecorators": true,

    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    }
  }
}
